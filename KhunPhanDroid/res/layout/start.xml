<merge xmlns:android="http://schemas.android.com/apk/res/android">

 <ImageView 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:src="@drawable/start_pic"
	/>
 <Button 
	android:id="@+id/button_instructions" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:layout_marginBottom="30dp"
	android:layout_marginLeft="20dp"
    android:layout_gravity="left|bottom"
    android:background="@drawable/button_shape"
	android:text="@string/button_instructions"
	android:textSize="@dimen/textsize_startbuttons"
	android:textColor="@drawable/button_selectable"
	android:textStyle="bold"
	android:onClick="onClickStartInstructions"
	/>
 <Button 
	android:id="@+id/button_level_selection" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:layout_marginBottom="30dp"
	android:layout_marginRight="20dp"
    android:layout_gravity="right|bottom"
    android:background="@drawable/button_shape"
	android:text="@string/button_start_game"
	android:textSize="@dimen/textsize_startbuttons"
	android:textColor="@drawable/button_selectable"
    android:textStyle="bold"
	android:onClick="onClickStartLevelSelection"
	/>
  
</merge>
