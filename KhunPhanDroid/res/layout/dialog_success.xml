<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content" android:layout_height="wrap_content">
 
 <TextView android:id="@+id/TextViewSuccess"
 	android:layout_width="wrap_content" 
 	android:layout_height="wrap_content"
 	android:text="@string/dialog_success"
 	android:textStyle="bold"/>
 
 <Button android:id="@+id/button_new_game" 
 	android:layout_below="@id/TextViewSuccess"
 	android:layout_width="wrap_content" 
 	android:layout_height="wrap_content"
 	android:layout_centerHorizontal="true" 
 	android:text="@string/button_new_game"
 	android:onClick="onClickNewGame"/>
 
</RelativeLayout>