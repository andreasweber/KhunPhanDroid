<?xml version="1.0" encoding="utf-8"?> 
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Level1Layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TableLayout
        android:layout_gravity="top" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:stretchColumns="1">
	    <TableRow>
	  	  	<TextView android:id="@+id/txt_moves"
	  	  	          android:gravity="left"
	  	  	    	  android:textColor="@color/textfarbe"/>
	  	  	<TextView android:id="@+id/txt_best_solution"
	 				  android:gravity="right"
	 				  android:textColor="@color/textfarbe"/>
	    </TableRow>
	    <!-- for debugging 
	    <TableRow>
	    	<TextView android:text="Free Positions :"/>
	    	<TextView android:id="@+id/txt_freepositions"/>
	    </TableRow>
	    -->
    </TableLayout>
    
    <FrameLayout
		android:layout_width="260dp" 
		android:layout_height="320dp" 
		android:id="@+id/OuterBoardLayout" 
		android:layout_gravity="center_horizontal|bottom">
		<ImageView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:src="@drawable/background_outer"
		/>
		<FrameLayout
			android:layout_width="120dp" 
			android:layout_height="10dp"  
			android:background="@color/black" 
			android:layout_gravity="center_horizontal|bottom"/>
	</FrameLayout>		
		
	<FrameLayout
		android:layout_width="240dp" 
		android:layout_height="300dp" 
		android:id="@+id/InnerBoardLayout" 
		android:layout_gravity="center_horizontal|bottom">
		<ImageView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:src="@drawable/background_inner"
		/>
		<View android:background="@drawable/piece11_pic" 
			android:layout_height="60dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece11_1" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece11_pic" 
			android:layout_height="60dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece11_2" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece11_pic" 
			android:layout_height="60dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece11_3" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece11_pic" 
			android:layout_height="60dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece11_4" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece12_pic" 
			android:layout_height="120dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece12_1" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece12_pic" 
			android:layout_height="120dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece12_2" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece12_pic" 
			android:layout_height="120dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece12_3" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece12_pic" 
			android:layout_height="120dp" 
			android:layout_width="60dp" 
			android:id="@+id/Piece12_4" 
			android:layout_gravity="top"> 
		</View>
		<View android:background="@drawable/piece21_pic" 
			android:layout_height="60dp" 
			android:layout_width="120dp" 
			android:id="@+id/Piece21" 
			android:layout_gravity="top"> 
		</View> 
		<View android:background="@drawable/piece22_pic" 
			android:layout_height="120dp" 
			android:layout_width="120dp" 
			android:id="@+id/Piece22" 
			android:layout_gravity="top"> 
		</View> 
	</FrameLayout>
	
</FrameLayout>